{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "es6",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*","./*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
    "types": ["node", "jest"]
}